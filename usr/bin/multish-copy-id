#!/bin/bash
#echo $LOGNAME $HOME
if [[ ! -f ~/.ssh/id_rsa ]]
then
  echo "You don't have public key"
  read -p "Do you want to create it?[y/n]" -n 1 -r
  echo    # (optional) move to a new line
  if [[ $REPLY =~ ^[Yy]$ ]]
  then
    ssh-keygen -t rsa
  else
    exit 1
  fi  
fi

prompt="Select group to copy public key:"
options=( $(find /etc/multish/group -type f -name "*" -print0 | xargs -0) )
PS3="$prompt "
select opt in "${options[@]}" "Quit" ; do 
    if (( REPLY == 1 + ${#options[@]} )) ; then
        exit
    elif (( REPLY > 0 && REPLY <= ${#options[@]} )) ; then
        echo  "You picked $opt which is file $REPLY"
        echo -n Password: 
        read -s password

        for sshConn in $(cat $opt | awk -F\# '$1!="" { print $1 ;}');  
        do  
            echo ""
            echo $sshConn
            sshpass -p $password ssh-copy-id -i ~/.ssh/id_rsa.pub $sshConn
        done
        break
        
        

    else
        echo "Invalid option. Try another one."
    fi
done 

multish
# Read passwords of hosts
#echo -n Password: 
#read -s password

#for sshConn in $(cat /etc/multish/group/$1 | awk -F\# '$1!="" { print $1 ;}');  
#do  
#    sshpass -p $password ssh-copy-id -i ~/.ssh/id_rsa.pub $sshConn
#done